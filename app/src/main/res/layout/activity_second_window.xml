<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/mainBack"
        android:orientation="vertical"
>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="50px"
    >

    <ImageView
            android:layout_width="80px"
            android:layout_height="80px"
            android:src="@drawable/arrow_1"
            android:id="@+id/arrowBack"
            android:layout_marginTop="50px"
            android:layout_marginLeft="50px"
    />

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Sign Up"
                  android:layout_marginTop="28px"
                  android:id="@+id/signUpLabel"
                  android:textSize="80px"
                  android:layout_marginLeft="260px"
                  android:fontFamily="@font/main_font"
                  />
    </LinearLayout>

    <TextView
            android:text="Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:id="@+id/secondLoginLabel"
            android:textAlignment="center"
            android:layout_marginTop="20sp"
            android:fontFamily="@font/main_font"
    />
    <EditText
            android:layout_width="390px"
            android:id="@+id/secondLoginText"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="350px"
            android:layout_marginTop="-20px"
    />
    <TextView
            android:text="Password"
            android:id="@+id/secondPasswordLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_marginTop="20sp"
            android:fontFamily="@font/main_font"
    />
    <EditText
            android:layout_width="390px"
            android:layout_height="wrap_content"
            android:id="@+id/secondPasswordText"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="350px"
            android:layout_marginTop="-20px"
    />
    <TextView
            android:text="Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:id="@+id/emailLabel"
            android:textAlignment="center"
            android:layout_marginTop="20sp"
            android:fontFamily="@font/main_font"
    />
    <EditText
            android:layout_width="390px"
            android:id="@+id/emailText"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="350px"
            android:layout_marginTop="-20px"
    />
    <TextView
            android:text="Phone Number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textAlignment="center"
            android:layout_marginTop="20sp"
            android:id="@+id/phoneLabel"
            android:fontFamily="@font/main_font"
    />
    <EditText
            android:layout_width="390px"
            android:layout_height="wrap_content"
            android:id="@+id/phoneText"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="350px"
            android:layout_marginTop="-20px"
    />

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                    android:orientation="horizontal"
                  android:layout_marginLeft="220px"
                  android:layout_marginRight="120px"
                  android:id="@+id/radioButtonStack"
                  android:layout_marginTop="50px"
    >
     <LinearLayout android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="vertical"
                   android:layout_weight="1"
     >

         <TextView android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="Passenger"
                   android:fontFamily="@font/main_font"
         />
         <RadioButton android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:checked="true"
                      android:id="@+id/passangerRadioButton"
                   android:layout_marginLeft="45px"
         />
     </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_weight="1"
        >

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Deliverer"
                      android:fontFamily="@font/main_font"
            />
            <RadioButton android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="45px"
                         android:id="@+id/delivererRadioButton"
            />
        </LinearLayout>
        <LinearLayout android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_weight="1"
        >

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Restaurant"
                      android:fontFamily="@font/main_font"
            />
            <RadioButton android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="45px"
                         android:id="@+id/restaurantRadioButton"
            />
        </LinearLayout>
    </LinearLayout>

    <Button android:layout_width="300px"
            android:layout_height="100px"
            android:text="Sign Up"
            android:layout_marginLeft="400px"
            android:layout_marginTop="90px"
            android:id="@+id/signUpButton"
            android:background="@drawable/login_button"
    />

</LinearLayout>