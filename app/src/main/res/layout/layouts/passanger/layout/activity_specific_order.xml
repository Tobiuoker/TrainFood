<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".passenger.restaurants_main"
        android:background="@color/mainBack"
        android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="190px"
                  android:orientation="horizontal"
                  android:background="@color/navBar">

        <ImageView
                android:layout_width="60px"
                android:layout_height="60px"
                android:src="@drawable/arrow_1"
                android:id="@+id/specific_order_return"
                android:layout_marginTop="70px"
                android:layout_marginLeft="60px"
        />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Order #3"
                  android:id="@+id/specific_order_orderNumber"
                  android:fontFamily="@font/main_font"
                  android:textSize="60px"
                  android:layout_marginTop="50px"
                  android:layout_marginLeft="250px"
        />

        <Button android:layout_width="wrap_content"
                android:layout_height="100px"
                android:text="Ordered"
                android:layout_marginLeft="150px"
                android:id="@+id/specific_order_button"
                android:background="@color/ordered"
                android:layout_gravity="center_vertical"
        />

    </LinearLayout>



    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/specific_order_recycleview"
            android:focusable="true"
    />

</LinearLayout>
