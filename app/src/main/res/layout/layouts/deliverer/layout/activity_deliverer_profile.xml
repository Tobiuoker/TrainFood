<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".passenger.restaurants_main"
        android:background="@color/mainBack"
        android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="190px"
                  android:orientation="horizontal"
                  android:background="@color/navBar">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="My Profile"
                  android:fontFamily="@font/main_font"
                  android:textSize="60px"
                  android:layout_marginTop="50px"
                  android:layout_marginLeft="370px"
                  android:textAlignment="center"
        />

        <Button android:layout_width="wrap_content"
                android:layout_height="70px"
                android:text="LogOut"
                android:id="@+id/delivererLogout"
                android:fontFamily="@font/main_font"
                android:background="@color/logout"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="100px"

        />
    </LinearLayout>


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content">

        <ImageView android:layout_width="280px"
                   android:layout_height="280px"
                   android:layout_marginLeft="50px"
                   android:layout_marginTop="100px"
                   android:src="@drawable/profile"/>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="100px"
                      android:layout_marginLeft="50px"
                      android:orientation="vertical">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:textSize="70px"
                      android:fontFamily="@font/main_font"
                      android:text="John"
            />
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="40px"
                      android:textSize="70px"
                      android:fontFamily="@font/main_font"
                      android:text="Wilson"
            />


        </LinearLayout>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="(Deliverer)"
                  android:layout_gravity="center_vertical"
                  android:layout_marginLeft="-290px"
                  android:layout_marginTop="-30px"
                  android:fontFamily="@font/main_font"
                  android:textSize="50px"
        />

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="50px"
                  android:layout_gravity="center"
                  android:layout_marginTop="150px">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="70px"
                  android:layout_gravity="center_vertical"
                  android:text="8(705) 929-26-61"
                  android:fontFamily="@font/main_font"
        />

    </LinearLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation_deliverer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:itemBackground="@color/navBar"
            android:layout_marginTop="600px"
            app:itemIconTint="@color/button_bar_color"
            app:itemTextColor="@color/button_bar_color"
            app:menu="@menu/menu_for_deliverer" />

</LinearLayout>