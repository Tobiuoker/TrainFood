<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".passenger.restaurants_main"
        android:background="@color/mainBack"
        android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="190px"
                  android:orientation="horizontal"
                  android:background="@color/navBar">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Information"
                  android:fontFamily="@font/main_font"
                  android:textSize="60px"
                  android:layout_marginTop="50px"
                  android:layout_marginLeft="400px"
                  android:textAlignment="center"
        />

        <Button android:layout_width="wrap_content"
                android:layout_height="70px"
                android:text="LogOut"
                android:id="@+id/restLogout"
                android:fontFamily="@font/main_font"
                android:background="@color/logout"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="100px"

        />
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_marginLeft="150px"
                  android:layout_marginTop="120px"
                  android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Paradise"
                  android:textSize="50px"
                  android:textStyle="bold"
                  android:id="@+id/restProfileName"
                  android:fontFamily="@font/reemkufi_regular"
        />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="8 (800) 555 35 35"
                  android:textSize="50px"
                  android:layout_marginLeft="150px"
        />
    </LinearLayout>

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Georgia Cuisine"
              android:layout_marginTop="100px"
              android:textSize="50px"
              android:fontFamily="@font/reemkufi_regular"
              android:layout_marginLeft="150px"
    />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Description: "
              android:layout_marginTop="100px"
              android:textSize="50px"
              android:fontFamily="@font/reemkufi_regular"
              android:layout_marginLeft="150px"
    />
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. "
              android:layout_marginTop="50px"
              android:textSize="50px"
              android:fontFamily="@font/reemkufi_regular"
              android:layout_marginLeft="150px"
    />


    <LinearLayout android:layout_width="match_parent"
                  android:background="@color/navBar"
                  android:layout_marginTop="200px"
                  android:layout_height="match_parent">
        <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottom_navigation_restaurant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                app:itemBackground="@color/navBar"
                app:itemIconTint="@color/button_bar_color"
                app:itemTextColor="@color/button_bar_color"
                app:menu="@menu/menu_for_restaurant" />
    </LinearLayout>

</LinearLayout>