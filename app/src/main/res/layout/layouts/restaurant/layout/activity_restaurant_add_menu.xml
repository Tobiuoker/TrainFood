<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".passenger.restaurants_main"
        android:background="@color/mainBack"
        android:orientation="vertical">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="190px"
                  android:orientation="horizontal"
                  android:background="@color/navBar">


        <ImageView
                android:layout_width="60px"
                android:layout_height="60px"
                android:id="@+id/restaurant_add_menu_return"
                android:src="@drawable/arrow_1"
                android:layout_marginTop="70px"
                android:layout_marginLeft="60px"
        />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Add dish"
                  android:fontFamily="@font/main_font"
                  android:textSize="60px"
                  android:layout_marginTop="50px"
                  android:layout_marginLeft="280px"
        />

        <Button android:layout_width="wrap_content"
                android:layout_height="80px"
                android:text="Add"
                android:id="@+id/addDish"
                android:background="@color/button"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="140px"
        />
    </LinearLayout>


    <LinearLayout android:layout_width="match_parent"
                  android:layout_gravity="center_horizontal"
                  android:layout_marginTop="200px"
                  android:layout_marginLeft="150px"
                  android:layout_height="wrap_content">

        <ImageView android:layout_width="400px"
                   android:layout_height="400px"
                    android:id="@+id/dishImage"
                   android:src="@drawable/kebab"
        />

        <Button android:layout_width="200px"
                android:layout_height="80px"
                android:background="@color/button"
                android:text="Add Picture"
                android:textSize="30px"
                android:id="@+id/addDishPicture"
                android:layout_marginTop="270px"
                android:layout_marginLeft="100px"
        />

    </LinearLayout>


    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
    android:orientation="horizontal">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="100px"
                  android:text="Name of the dish: "
                  android:layout_marginTop="200px"
                  android:fontFamily="@font/reemkufi_regular"
                  android:layout_marginLeft="140px"
                  android:textSize="50px"
        />

        <EditText android:layout_width="420px"
                  android:textSize="50px"
                  android:hint="Name"
                  android:id="@+id/nameOfDish"
                  android:layout_marginTop="200px"
                  android:layout_height="150px"/>
    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="100px"
                  android:text="Price: "
                  android:fontFamily="@font/reemkufi_regular"
                  android:layout_marginTop="200px"
                  android:layout_marginLeft="140px"
                  android:textSize="50px"
        />

        <EditText android:layout_width="420px"
                  android:textSize="50px"
                  android:hint="Price"
                  android:id="@+id/priceOfDish"
                  android:layout_marginTop="200px"
                  android:layout_marginLeft="240px"
                  android:layout_height="120px"/>
    </LinearLayout>

</LinearLayout>