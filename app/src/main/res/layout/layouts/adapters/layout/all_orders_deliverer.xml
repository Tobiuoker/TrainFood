<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="200px">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="200px"
                  android:background="@drawable/cell"
                  android:orientation="horizontal">

        <TextView android:layout_width="400px"
                  android:layout_height="wrap_content"
                  android:text="Order #3"
                  android:id="@+id/all_orders_deliverer_title"
                  android:fontFamily="@font/main_font"
                  android:layout_marginLeft="80px"
                  android:layout_gravity="center"
        />

        <Button android:layout_width="250px"
                android:layout_height="100px"
                android:text="Unassigned"
                android:background="@color/ordered"
                android:id="@+id/all_orders_deliverer_status"
                android:layout_marginLeft="100px"
                android:layout_gravity="center_vertical"
        />
        <ImageView android:layout_width="50px"
                   android:layout_height="50px"
                   android:src="@drawable/arrow2"
                   android:layout_marginLeft="100px"
                   android:layout_gravity="center"
        />


    </LinearLayout>

</LinearLayout>