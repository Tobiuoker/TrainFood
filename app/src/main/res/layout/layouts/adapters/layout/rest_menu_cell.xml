<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="280px">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@drawable/cell"
                  android:orientation="horizontal">

        <ImageView android:layout_width="280px"
                   android:layout_height="280px"
                   android:layout_marginLeft="40px"
                   android:id="@+id/rest_menu_image"
                   android:src="@drawable/lagman"

        />

        <LinearLayout android:layout_width="300px"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_marginLeft="-50px"
                      android:layout_marginTop="20px"
                      android:layout_marginRight="37px">

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Lagman"
                      android:id="@+id/rest_menu_title"
                      android:fontFamily="@font/main_font"
                      android:layout_marginLeft="80px"
                      android:layout_marginTop="50px"
            />
            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="12$"
                      android:id="@+id/rest_menu_price"
                      android:fontFamily="@font/main_font"
                      android:layout_marginLeft="80px"
                      android:layout_marginTop="20px"
            />
        </LinearLayout>

        <LinearLayout android:layout_width="300px"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
                      android:layout_marginLeft="-40px"
                      android:layout_gravity="center_vertical">

            <Button android:layout_width="100px"
                    android:layout_height="100px"
                    android:text="-"
                    android:focusable="false"
                    android:id="@+id/rest_menu_minus"
                    android:textSize="30px"
                    android:layout_marginLeft="0px"
            />
            <TextView android:layout_width="20px"
                      android:layout_height="wrap_content"
                      android:text="1"
                      android:id="@+id/rest_menu_counter"
                      android:layout_marginLeft="20px"
            />
            <Button android:layout_width="100px"
                    android:layout_height="100px"
                    android:text="+"
                    android:id="@+id/rest_menu_plus"
                    android:textSize="30px"
                    android:focusable="false"
                    android:layout_marginLeft="20px"
            />
        </LinearLayout>

        <Button android:layout_width="170px"
                android:layout_height="90px"
                android:layout_gravity="center_vertical"
                android:text="Add"
                android:id="@+id/addDishToBusket"
                android:focusable="false"
                android:layout_marginRight="20px"
                android:textSize="34px"
                android:background="@color/button"
        />
    </LinearLayout>

</LinearLayout>